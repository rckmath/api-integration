{
    "settings": {
        "import/extensions": [
            ".js"
        ]
    },
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "rules": {
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                ".js": "never"
            }
        ],
        "import/no-named-as-default": 0,
        "no-console": "off",
        "no-param-reassign": "off",
        "max-len": [
            "error",
            150
        ],
        "linebreak-style": "off",
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1
            }
        ],
        "padding-line-between-statements": [
            "error",
            {
                "blankLine": "always",
                "prev": [
                    "if",
                    "for",
                    "while",
                    "block-like",
                    "block"
                ],
                "next": "*"
            },
            {
                "blankLine": "always",
                "prev": "*",
                "next": [
                    "if",
                    "for",
                    "while",
                    "block-like",
                    "block"
                ]
            }
        ],
        "padded-blocks": [
            "error",
            {
                "switches": "always"
            }
        ]
    }
}